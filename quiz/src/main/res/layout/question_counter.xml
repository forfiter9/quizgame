<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/question_counter_margin_start"
    android:layout_marginTop="@dimen/question_counter_margin_top">

    <View
        android:id="@+id/counter_background"
        android:layout_width="@dimen/question_counter_background_width"
        android:layout_height="@dimen/question_counter_background_height"
        android:background="@drawable/background_rounded_white_radius_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/question_counter_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/counter_background"
        app:layout_constraintEnd_toEndOf="@id/counter_background"
        app:layout_constraintStart_toStartOf="@id/counter_background"
        app:layout_constraintTop_toTopOf="@id/counter_background"
        tools:text="0/23" />
</androidx.constraintlayout.widget.ConstraintLayout>